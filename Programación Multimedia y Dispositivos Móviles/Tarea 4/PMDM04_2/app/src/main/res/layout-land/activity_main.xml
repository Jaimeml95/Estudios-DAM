<?xml version="1.0" encoding="utf-8"?>
<!-- Tarea UT04.2: Diseño Apaisado (Landscape) - Spinner y Resultado. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context="com.example.pmdm04_2.MainActivity">

    <!-- Título principal de la aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <!-- TextView para mostrar instrucciones -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etiqueta_seleccion_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <!-- Spinner para la selección de colores -->
    <Spinner
        android:id="@+id/spinner_colores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/seleccion_color"
        android:minHeight="48dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- TextView para mostrar el color seleccionado -->
    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:text="@string/color_seleccionado"
        android:paddingTop="20dp"/>

</LinearLayout>