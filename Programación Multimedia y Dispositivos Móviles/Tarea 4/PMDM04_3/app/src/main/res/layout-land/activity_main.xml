<?xml version="1.0" encoding="utf-8"?>
<!-- Tarea UT04.3: Diseño Apaisado (Landscape) - ListView y Resultado (Horizontal). -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.pmdm04_3.MainActivity">

    <!-- Título principal de la aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <!-- Contenedor principal Horizontal (ListView vs Resultado) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Columna Izquierda: Instrucciones y ListView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingRight="16dp">

            <!-- TextView para instrucciones -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_seleccion"
                android:textSize="18sp"
                android:textStyle="italic"
                android:paddingBottom="5dp"/>

            <!-- ListView para la selección de ciudades -->
            <ListView
                android:id="@+id/lv_ciudades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/ciudades"
                android:padding="5dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Columna Derecha: Resultado -->
        <TextView
            android:id="@+id/tv_resultado_habitantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:text="@string/resultado_inicial"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"/>

    </LinearLayout>

</LinearLayout>