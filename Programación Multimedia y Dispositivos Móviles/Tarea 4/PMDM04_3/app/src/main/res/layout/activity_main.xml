<?xml version="1.0" encoding="utf-8"?>
<!-- Tarea UT04.3: Diseño Vertical (Portrait) - ListView y Resultado. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context="com.example.pmdm04_3.MainActivity">

    <!-- Título principal de la aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="30dp"/>

    <!-- TextView para instrucciones -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etiqueta_seleccion"
        android:textSize="18sp"
        android:textStyle="italic"
        android:paddingBottom="10dp"/>

    <!-- ListView para la selección de ciudades -->
    <ListView
        android:id="@+id/lv_ciudades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/ciudades"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:background="@android:color/darker_gray"/>

    <!-- TextView para mostrar el resultado de la selección -->
    <TextView
        android:id="@+id/tv_resultado_habitantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:text="@string/resultado_inicial"
        android:paddingTop="20dp"/>

</LinearLayout>