<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Usa androidx.appcompat.widget.AppCompatButton para mejor control de estilos -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_oto単o"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/oto単o"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_style"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_invierno" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_invierno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/invierno"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_style"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_oto単o"
        app:layout_constraintBottom_toTopOf="@+id/btn_primavera" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_primavera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/primavera"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_style"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_invierno"
        app:layout_constraintBottom_toTopOf="@+id/btn_verano" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verano"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_style"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_primavera"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>